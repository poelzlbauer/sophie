<% @entries.each do |entry| %>
  <tr>
    <td><%= entry.name %></td>
    <td><%= entry.description %></td>
    <td><%= entry.start_ts %></td>
    <td><%= entry.end_ts %></td>
    <td><%= link_to 'Show', [@story, entry] %></td>
    <td><%= link_to 'Edit', edit_story_entry_path(@story, entry) %></td>
    <td><%= link_to 'Destroy', [@story, entry], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

